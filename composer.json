{
  "name": "spoom-php/composer",
  "description": "Autoloader (for nested classes) and installer for the Spoom packages",
  "keywords": [ "spoom", "composer", "autoload" ],
  "type": "composer-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Nagy Samu"
    }
  ],

  "require": {
    "php": "^7.0",
    "composer-plugin-api": "^1.0"
  },
  "require-dev": {
    "composer/composer": "^1.0"
  },

  "autoload": {
    "files": [ "src/library/Autoload.php" ],
    "psr-4": {
      "Spoom\\Composer\\": "src/library/"
    }
  },
  "extra": {
    "class": "Spoom\\Composer\\Plugin"
  }
}
